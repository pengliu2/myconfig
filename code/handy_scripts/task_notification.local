#!/bin/sh
if which zenity > /dev/null; then
	if [ -z $1 ]; then
        notify-send ${PWD} &
		zenity --info --text=${PWD} &
	else
        notify-send $1 &
		zenity --info --text=$1 &
	fi
fi

if which ogg123 > /dev/null; then
        if [ -f "/home/a22543/Documents/ding.ogg" ]; then
                ogg123 -q /home/a22543/Documents/ding.ogg 2>&1 > /dev/null
        fi
fi

